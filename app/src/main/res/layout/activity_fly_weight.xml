<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.alex.patterns.flyweight.java.ViewJava
        android:id="@+id/vJava"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#e8f4b2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/vKotlin"/>

    <com.alex.patterns.flyweight.kotlin.ViewKotlin
        android:id="@+id/vKotlin"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#a0ecc6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vJava"/>

</android.support.constraint.ConstraintLayout>