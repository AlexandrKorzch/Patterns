<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".facade.FacadeActivity">

    <Button
        android:id="@+id/btLoadKotlin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/load_computer_kotlin"
        android:layout_marginTop="48dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/btLoadJava"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/load_computer_java"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btLoadKotlin"/>

</android.support.constraint.ConstraintLayout>